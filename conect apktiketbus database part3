    private void tbsimpanActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            String sql = "INSERT INTO penumpang VALUES ('"+txtiddata.getText()+"','"+txtnamapenumpang.getText()+"','"+cbjurusan.getSelectedItem()+"','"+txttariftiket.getText()+"','"+txtjumlahbeli.getText()+"','"+txtjumlahbayar.getText()+"')";
            java.sql.Connection conn =  (Connection)konfig.configDB();
            java.sql.PreparedStatement pstm =conn.prepareStatement(sql);
            pstm.execute();
            JOptionPane.showMessageDialog(null,"Proses simpan data berhasil...");
            tampilkan_data();
            kosongkan_form();
        }catch(HeadlessException | SQLException e){
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
    }                                        

