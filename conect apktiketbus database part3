    private void kosongkan_form(){
    txtiddata.setEditable(true);
    txtiddata.setText(null);
    txtnamapenumpang.setText(null);
    cbjurusan.setSelectedItem(this);
    txtjumlahbeli.setText(null);
    txttariftiket.setText(null);
    txtjumlahbayar.setText(null);
}
    private void tampilkan_data(){
        
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("No 1 ");
        model.addColumn("ID Data");
        model.addColumn("Nama Penumpang");
        model.addColumn("Jurusan");
        model.addColumn("Tarif Tiket");
        model.addColumn("Jumlah Beli");
        model.addColumn("Jumlah Bayar");
        
        try{
            int no = 1;
            String sql = "SELECT * FROM penumpang";
            java.sql.Connection conn = (Connection)konfig.configDB();
            java.sql.Statement stm = conn.createStatement();
            java.sql.ResultSet res = stm.executeQuery(sql);
            
            while(res.next()){
                model.addRow(new Object[]{no++,res.getString(1),res.getString(2),res.getString(3),res.getString(4),res.getString(5),res.getString(6)});
            }
            
        }catch (SQLException e){
            System.out.println("Error : " + e.getMessage());
        }
        tablepenumpang.setModel(model);
    }
    /**
     * Creates new form AplikasiTiketBus
     */
    public AplikasiTiketBus() {
        initComponents();
        tampilkan_data();
        kosongkan_form();
    }

